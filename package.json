{
  "name": "cssrem",
  "displayName": "cssrem（px转rem）",
  "description": "一个CSS值转REM的VSCode插件",
  "version": "0.0.7",
  "publisher": "cipchk",
  "icon": "icon.png",
  "license": "MIT",
  "licenseUrl": "LICENSE",
  "engines": {
    "vscode": "^1.12.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cipchk/vscode-cssrem.git"
  },
  "bugs": {
    "url": "https://github.com/cipchk/vscode-cssrem/issues",
    "email": "cipchk@qq.com"
  },
  "homepage": "https://github.com/cipchk/vscode-cssrem",
  "keywords": [
    "rem",
    "px rem",
    "px to rem",
    "px2rem",
    "css rem"
  ],
  "categories": [
    "Formatters",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:stylus",
    "onLanguage:tpl"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [{
      "command": "extension.cssrem",
      "title": "CSSRem PxToRem"
    }],
    "configuration": {
      "type": "object",
      "title": "cssrem configuration",
      "properties": {
        "cssrem.rootFontSize": {
          "type": "number",
          "default": 16,
          "description": "root font-size (unit: px), default: 16"
        },
        "cssrem.fixedDigits": {
          "type": "number",
          "default": 6,
          "description": "Px to rem decimal point maximum length, default: 6"
        },
        "cssrem.autoRemovePrefixZero": {
          "type": "boolean",
          "default": true,
          "description": "Automatically remove prefix 0, default: true"
        }
      }
    }
  },
  "scripts": {
    "prod": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "run-s prod package",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "^10.12.2",
    "typescript": "^3.1.6",
    "vscode": "^1.1.21",
    "mocha": "^2.3.3",
    "@types/mocha": "^2.2.32"
  }
}